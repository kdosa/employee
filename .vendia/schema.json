{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://vendia.net/schemas/demos/employee.json",
  "title": "Employee",
  "description": "Employee data",
  "type": "object",
  "properties": {
    "Employee": {
      "description": "Employee data",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "emp_id": {
            "description": "Employee ID",
            "type": "number"
          },
          "firstName": {
            "description": "First name",
            "type": "string"
          },
          "lastName": {
            "description": "Last name",
            "type": "string"
          },
          "age": {
            "description": "Age",
            "type": "number"
          },
          "genderIdentity": {
            "description": "Gender identity",
            "type": "string",
            "enum": [
              "Woman",
              "Man",
              "Transgender",
              "NonbinaryNonconforming",
              "PreferNotToRespond"
            ]
          },
          "height": {
            "description": "Height",
            "type": "number"
          },
          "weight": {
            "description": "Weight",
            "type": "number"
          },
          "BodyTemperature": {
            "description": "Body temperature",
            "type": "number"
          },
          "pulseRate": {
            "description": "Pulse rate",
            "type": "number"
          },
          "bloodPressureSystolic": {
            "description": "Blood pressure systolic",
            "type": "number"
          },
          "bloodPressureDiastolic": {
            "description": "Blood pressure diastolic",
            "type": "number"
          },
          "respirationRate": {
            "description": "Respiration rate",
            "type": "number"
          },
          "exerciseHours": {
            "description": "Avg hours of exercise per week",
            "type": "number"
          },
          "vacationBalance": {
            "description": "Vacation balance",
            "type": "number"
          },
          "workHours": {
            "description": "Avg hours of work per week",
            "type": "number"
          }
        }
      }
    }
  }
}